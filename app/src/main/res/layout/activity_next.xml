<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/dark"
		tools:context=".NextActivity">

	<androidx.cardview.widget.CardView
			android:id="@+id/cardView"
			android:layout_width="344dp"
			android:layout_height="208dp"
			android:layout_marginHorizontal="8dp"
			android:layout_marginTop="56dp"
			android:backgroundTint="@color/white"
			app:cardCornerRadius="20dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		<androidx.cardview.widget.CardView
				android:id="@+id/category"
				android:layout_width="88dp"
				android:layout_height="24dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				app:cardBackgroundColor="@color/blue"
				app:cardCornerRadius="10dp">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center"
					android:text="Category"
					android:textColor="@color/white"
					android:textSize="12sp" />

		</androidx.cardview.widget.CardView>

		<ImageButton
				android:id="@+id/btn_heart"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_gravity="end"
				android:layout_margin="8dp"
				android:backgroundTint="@color/white"
				android:contentDescription="@string/app_name"
				android:scaleX="2"
				android:scaleY="2"
				android:src="@drawable/ic_heart" />

		<TextView
				android:id="@+id/result_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Text"
				android:textColor="@color/black"
				android:textSize="17sp"
				android:textStyle="bold" />

		<androidx.core.widget.ContentLoadingProgressBar
				android:layout_width="81dp"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:layout_marginEnd="16dp"
				android:layout_marginBottom="32dp"
				android:progressDrawable="@drawable/progress_bar_gradient" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:layout_marginEnd="32dp"
				android:layout_marginBottom="8dp"
				android:text="Accesibility"
				android:textColor="@color/black"
				android:textSize="10sp" />

		<TextView
				android:layout_width="48dp"
				android:layout_height="16dp"
				android:layout_marginLeft="40dp"
				android:layout_marginTop="160dp"
				android:gravity="center"
				android:text="free"
				android:textColor="@color/black"
				android:textSize="14sp"
				android:textStyle="bold" />

		<TextView
				android:layout_width="48dp"
				android:layout_height="16dp"
				android:layout_marginLeft="40dp"
				android:layout_marginTop="176dp"
				android:gravity="center"
				android:text="PriceðŸ’°"
				android:textColor="@color/black"
				android:textSize="10sp" />

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|bottom"
				android:layout_marginEnd="42dp"
				android:layout_marginBottom="26dp"
				android:src="@drawable/ic_one_user" />

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|bottom"
				android:layout_marginEnd="14dp"
				android:layout_marginBottom="26dp"
				android:src="@drawable/ic_two_user" />

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|bottom"
				android:layout_marginStart="14dp"
				android:layout_marginBottom="26dp"
				android:src="@drawable/ic_three_user" />

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|bottom"
				android:layout_marginStart="42dp"
				android:layout_marginBottom="26dp"
				android:src="@drawable/ic_three_and_more_user" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center|bottom"
				android:layout_marginBottom="8dp"
				android:text="Participants"
				android:textColor="@color/black"
				android:textSize="10sp" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|center"
				android:layout_marginStart="46dp"
				android:layout_marginBottom="28dp"
				android:text="+"
				android:textColor="@color/white"
				android:textSize="9sp" />

	</androidx.cardview.widget.CardView>

	<com.google.android.material.button.MaterialButton
			android:id="@+id/next_button"
			style="@style/Next.Button"
			android:layout_width="343dp"
			android:layout_height="48dp"
			android:layout_marginTop="25dp"
			android:backgroundTint="@color/blue"
			android:onClick="onDestroy"
			android:text="Next"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/cardView" />

	<TextView
			android:id="@+id/category2"
			android:layout_width="47dp"
			android:layout_height="13dp"
			android:layout_marginTop="54dp"
			android:text="Category"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintStart_toStartOf="@id/next_button"
			app:layout_constraintTop_toBottomOf="@id/next_button" />

	<com.google.android.material.button.MaterialButton
			style="@style/Next.Button"
			android:layout_width="158dp"
			android:layout_height="48dp"
			android:layout_marginTop="8dp"
			android:backgroundTint="@color/white"
			android:paddingEnd="100dp"
			android:text="Type"
			android:textAllCaps="false"
			android:textColor="@color/black"
			android:textSize="15sp"
			app:layout_constraintStart_toStartOf="@+id/category2"
			app:layout_constraintTop_toBottomOf="@+id/category2" />

	<TextView
			android:id="@+id/price"
			android:layout_width="47dp"
			android:layout_height="13dp"
			android:layout_marginTop="54dp"
			android:text="Price"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintEnd_toEndOf="@id/next_button"
			app:layout_constraintStart_toEndOf="@+id/category2"
			app:layout_constraintTop_toBottomOf="@id/next_button" />

	<com.google.android.material.slider.Slider
			android:id="@+id/slider"
			android:layout_width="177dp"
			android:layout_height="14dp"
			android:layout_marginTop="8dp"
			android:contentDescription="@string/app_name"
			app:haloColor="@color/white"
			app:layout_constraintStart_toStartOf="@id/price"
			app:layout_constraintTop_toBottomOf="@+id/price"
			app:thumbColor="@color/blue"
			app:thumbStrokeColor="@color/white"
			app:tickColor="@color/dark"
			app:trackColor="@color/white"
			app:trackHeight="3dp" />

	<TextView
			android:id="@+id/accesibility"
			android:layout_width="47dp"
			android:layout_height="13dp"
			android:layout_marginTop="28dp"
			android:text="Accesibility"
			android:textColor="@color/white"
			android:textSize="10sp"
			app:layout_constraintStart_toStartOf="@+id/slider"
			app:layout_constraintTop_toBottomOf="@id/slider" />

	<com.google.android.material.slider.Slider
			android:layout_width="177dp"
			android:layout_height="14dp"
			android:layout_marginTop="8dp"
			android:contentDescription="@string/app_name"
			app:haloColor="@color/white"
			app:layout_constraintStart_toStartOf="@id/accesibility"
			app:layout_constraintTop_toBottomOf="@+id/accesibility"
			app:thumbColor="@color/blue"
			app:thumbStrokeColor="@color/white"
			app:tickColor="@color/dark"
			app:trackColor="@color/white"
			app:trackHeight="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
